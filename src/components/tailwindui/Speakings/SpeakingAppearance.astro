---
import Card from "../Card.astro";
import CardCta from "../Cards/CardCta.astro";
import CardDescription from "../Cards/CardDescription.astro";
import CardEyebrow from "../Cards/CardEyebrow.astro";
import CardTitle from "../Cards/CardTitle.astro";

const {
    title,
    description,
    event,
    cta,
    href
} = Astro.props
---

<Card as="article">
    <CardTitle as="h3" href={href}>
      {title}
    </CardTitle>
    {event ? <CardEyebrow decorate>{event}</CardEyebrow> : null}
    <CardDescription>{description}</CardDescription>
    <CardCta>{cta}</CardCta>
</Card>