---
import { formatDate } from "../../../libs/formatDate";
import Card from "../Card.astro";
import CardCta from "../Cards/CardCta.astro";
import CardDescription from "../Cards/CardDescription.astro";
import CardEyebrow from "../Cards/CardEyebrow.astro";
import CardTitle from "../Cards/CardTitle.astro";

const {article} = Astro.props
---
<Card as="article">
    <CardTitle href={`/articles/${article.slug}`}>
      {article.data.title}
    </CardTitle>
    <CardEyebrow as="time" dateTime={article.data.pubDate} decorate>
      {formatDate(article.data.pubDate)}
    </CardEyebrow>
    <CardDescription>{article.data.description}</CardDescription>
    <CardCta>Read article</CardCta>
  </Card>