---

import Card from "../Card.astro";
import CardDescription from "../Cards/CardDescription.astro";
import CardTitle from "../Cards/CardTitle.astro";

const {href, title} = Astro.props
---

<Card as="li">
    <CardTitle as="h3" href={href}>
      {title}
    </CardTitle>
    <CardDescription>
        <slot></slot>
    </CardDescription>
  </Card>