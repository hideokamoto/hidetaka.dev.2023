---
import SocialLink from '../components/tailwindui/SocialLink.astro';
import Twitter from '../components/tailwindui/SocialIcons/Twitter.astro';
import GitHubIcon from '../components/tailwindui/SocialIcons/GitHubIcon.astro';
import LinkedInIcon from '../components/tailwindui/SocialIcons/LinkedInIcon.astro';
import { getEntryBySlug } from 'astro:content';
import ExternalLink from '../components/markdoc/ExternalLink.astro';
import OuterContainer from '../components/tailwindui/Containers/OuterContainer.astro';

const entry = await getEntryBySlug('profiles', 'hero');
const { Content } = entry ? await entry.render() : { Content: null};


---
	<OuterContainer>
		<div class='relative px-4 sm:px-8 lg:px-12'>
			<div class='mt-9 lg:grid lg:grid-cols-12 lg:gap-8'>
	  			<div class="sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left">
					<h1>
						<span class='block text-sm font-semibold uppercase tracking-wide text-zinc-800 dark:text-zinc-100 sm:text-base lg:text-sm xl:text-base'></span>
						<span class='mt-1 block text-3xl tracking-tight font-extrabold sm:text-4xl xl:text-5xl'>
							<span class='block text-zinc-800 dark:text-zinc-100'>Hello!</span>
							<span class='block text-zinc-800 dark:text-zinc-100'>
								I&lsquo;m <span class='text-indigo-600'>Hidetaka Okamoto</span>
							</span>
						</span>
					</h1>
				
					<div class="mt-6 text-base text-zinc-600 dark:text-zinc-400">
						{Content ? (
							<Content
								components={{ ExternalLink }}
							/>
						): null}
					</div>
					<div class="mt-6 flex gap-6">
					<SocialLink
						href="https://twitter.com/hidetaka_dev"
						aria-label="Follow on Twitter"
						icon={Twitter}
					/>
					<SocialLink
						href="https://github.com/hideokamoto"
						aria-label="Follow on GitHub"
						icon={GitHubIcon}
					/>
					<SocialLink
						href="https://www.linkedin.com/in/hideokamoto/"
						aria-label="Follow on LinkedIn"
						icon={LinkedInIcon}
					/>
					</div>
				</div>
				<div class='mt-12 relative sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-6 lg:flex lg:items-center'>
					<div class='relative mx-auto w-full rounded-lg shadow-lg lg:max-w-md'>
					<button
						type='button'
						class='relative block w-full bg-white rounded-lg overflow-hidden focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'
					>
						<span class='sr-only'>Watch our video to learn more</span>
						<img class='w-full' src='https://hidetaka.dev/images/profile.jpg' alt='Profile image' />
					</button>
					</div>
				</div>
	  		</div>
		</div>
	</OuterContainer>